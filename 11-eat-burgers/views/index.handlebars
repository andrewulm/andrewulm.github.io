<div class="container">
    <div class="col text-center">
        <img src="/assets/img/logo.png">
    </div>
    <div class="d-flex pt-5 text-center">
        <div class="col-3 burger-col">
            <h3>Burgers to Eat</h3>
            <hr/>
            <ul>
                {{#each burger}}
                    {{#unless eaten}}
                        {{> burgers/burger-block eaten=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6 form-col">
            <div class="card">
                <div class="card-header">
                    <h2>What you hungry for?</h2>
                </div>
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="burger">Burger Name:</label><br/>
                            <input type="text" id="burger" name="burger">
                        </div>
                        <div class="form-group">
                            <label for="eaten">Eaten?</label><br/>
                            <input type="radio" name="eaten" value="1">Yes
                            <input type="radio" name="eaten" value="0" checked>No
                        </div>
                        <button type="submit">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-3 burger-col">
            <h3>Burgers Eaten</h3>
            <hr/>
            <ul>
                {{#each burger}}
                    {{#if eaten}}
                        {{> burgers/burger-block eaten=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
